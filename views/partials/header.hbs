              {{/if}}

            </ul>
          </div>
        </div>
      </div>

    </div>
    <div class="nav-menu-list">
      <div class="container">
        <div class="row">
          <div class="col-5">
            <ul>
               {{#each data}}
                  <li><a href=""> {{title}} </a></li>
                {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- scroll-top -->
  <div class="scroll-top">
    <a href="#!"><i class="fas fa-arrow-up"></i></a>
