<section>
  <div class="shoppingBag">
    <div class="container">
      <h1>{{title}}</h1>
      <div class="row justify-content-center">
        <div class="col-10">

          <table class="table">
            <thead>
              <tr>
                <th scope="col">№</th>
                <th scope="col">Наименование товара</th>
                <th scope="col">Количество</th>
                <th scope="col">Цена </th>
                <th scope="col">Действия </th>
              </tr>
            </thead>
            <tbody>
               
                   {{#each db as |item i|}}
                  <tr class="price">
                    <th scope="row">{{i}}</th>
                    <td>{{title}}</td>
                    <td class="countTable">
                      <button class="count addCount">+</button>
                      <p class="countNum">0</p>
                      <button class="count removeCount">-</button>
                    </td>
                    <td class="sum">{{price}}</td>
                    <td><button class="deleteBags" data-id={{id}}><i
                          class="fas fa-trash-alt"
                        ></i></button>
                    </td>
                  </tr>
                {{/each}}
              

            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</section>
  <script src="/js/fetch.js"></script>